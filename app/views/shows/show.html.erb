<h1><%= @show.friendly_name %></h1>
<div class="left">
    <h2>People Who Have Tickets</h2>
    <ul class="userList">
    <% for ticket in @show.tickets %>
        <li><%=link_to ticket.user.login , ticket.user %> has <%= pluralize ticket.quantity, 'ticket' %> <span>posted <%= time_ago_in_words ticket.created_at%> ago</span></li>                
    <% end%>
    </ul>
</div>

<div class="right">
    <h2>People Who Want Tickets</h2>
    <ul class="userList">
    <% for want in @show.wants %>
        <li><%=link_to want.user.login , want.user %> needs <%= pluralize want.quantity, 'ticket' %> <span>posted <%= time_ago_in_words want.created_at%> ago</span></li>                
    <% end%>    
    </ul>
</div>